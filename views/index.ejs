<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/index.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="flashmessages">
        <% if (messages.error && messages.error.length > 0) { %>
            <div class="emsg alert alert-danger " id="flasherror">
              <%= messages.error[0] %>
            </div>
          <% } %>
          
          <% if (messages.success && messages.success.length > 0) { %>
            <div class="smsg alert alert-success" id="flashsuccess">
              <%= messages.success[0] %>
            </div>
          <% } %>
    </div>
    <div class="signup">
        <h1>Welcome To <span style="color: rgb(57, 179, 227); font-weight: 600;"> Scratch </span></h1>
        <h4>Create Your Account</h4>
        <form action="/users/register" method="post" class="form">
            <input type="text" name="name" placeholder="Enter Your Name" required >
            <input type="email" name="email" placeholder="Enter  Your Email" required >
            <input type="password" name="password" placeholder="Enter Your Password" required>
            <button type="submit" class="btn btn-primary">Create Account</button>
        </form>
        <a href="/users/login">Already Registered ? Click to Login</a>
    </div>   
    <script>
      setTimeout(()=>{
        hideflashmessages()
      },3000);
      function hideflashmessages(){
        flasherror = document.getElementById('flasherror')
        flashsuccess = document.getElementById('flashsuccess')
        if(flasherror != null){
          flasherror.style.display = 'none';          
        }
        else{
          flashsuccess.style.display = 'none';
        }
        
     

      }
    </script>
       
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"></script>
</body>
</html>
